import os
import subprocess
import sys

playlist_url = input("Enter the Spotify playlist URL: ").strip()

if not playlist_url:
    print("‚ùå Playlist URL is empty")
    sys.exit(1)

output_folder = os.path.join(os.path.expanduser("~"), "Music", "Playlists")
os.makedirs(output_folder, exist_ok=True)

subprocess.run(
    ["spotdl", playlist_url, "--output", output_folder],
    check=True
)
